<%= form_for @user do |f| %>
<div class="form-group">
	<%=f.label :firstname%>
	<%=f.text_field :firstname%><br /><br />
</div>
<div class="form-group">
	<%=f.label :lastname%>
	<%=f.text_field :lastname%><br /><br />
</div>
<div class="form-group">
	<%=f.label :designation%>
	<%=f.text_field :designation%><br /><br />
</div>
<div class="form-group">
	<%=f.label :place%>
	<%=f.text_field :place%><br /><br />
</div>
<%=f.submit"submit" %>
<% end %>
